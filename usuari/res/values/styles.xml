<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="titles" parent="android:Widget.TextView">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginTop">25dip</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">28px</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subtitle" parent="android:Widget.TextView">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">26px</item>
    </style>
    <style name="blue_label" parent="android:Widget.TextView">
        <item name="android:background">@drawable/round_button_normal</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">28px</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="gray_label" parent="android:Widget.TextView">
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">26px</item>
    </style>
    <style name="white_text" parent="android:Widget.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">28px</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MenuLabel" parent="android:Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="label" parent="android:Widget.TextView">
        <item name="android:background">@drawable/label</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textbox" parent="android:Widget.TextView">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        
    </style>
</resources>
